<div class="container">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 standart-space">
        <form role="form" class="form" action="/registration" method="post">
            <div class="form-group">
                <label for="InputName">Name</label>
                <input type="text" class="form-control" id="InputName" placeholder="Name" name="name">
            </div>
            <div class="form-group">
                <label for="InputLogin">Login</label>
                <input type="text" class="form-control" id="InputLogin" placeholder="Login" name="login">
            </div>
            <div class="form-group">
                <label for="InputEmail">Email</label>
                <input type="email" class="form-control" id="InputEmail" placeholder="Email" name="email">
            </div>
            <div class="form-group">
                <label for="InputPassword">Password</label>
                <input type="password" class="form-control" id="InputPassword" placeholder="Password" name="password1">
            </div>
            <div class="form-group">
                <label for="InputConfirmPassword">Confirm Password</label>
                <input type="password" class="form-control" id="InputConfirmPassword" placeholder="Confirm Password" name="password2">
            </div>
            <div class="form-group">
                <label for="InputPhone">Phone</label>
                <input type="tel" class="form-control" id="InputPhone" placeholder="Input your phone" name="phone">
            </div>

            <button type="submit" class="btn btn-default">Registration</button>
        </form>
    </div>
    </div>
</div>
